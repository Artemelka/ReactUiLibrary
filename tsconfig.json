{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "allowJs":  true,
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.jsx"
  ]
}
