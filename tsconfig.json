{
  "compilerOptions": {
    "allowJs":  true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "esnext",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "app": ["./app"],
      "components": ["./app/components"],
      "utils": ["./app/utils"],
      "services": ["./services"],
      "elements": ["./app/elements"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.jsx"
  ]
}
